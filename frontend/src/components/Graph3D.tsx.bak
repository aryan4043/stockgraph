import React, { useEffect, useRef, useState, useMemo } from 'react';
import ForceGraph3D from 'react-force-graph-3d';
import { useQuery } from '@tanstack/react-query';
import { getGraphData } from '../services/api';
import { Info, Maximize2, ZoomIn, ZoomOut, RotateCcw, Play, Pause, Layers, Filter } from 'lucide-react';
import * as THREE from 'three';

// Sector colors for visualization
const SECTOR_COLORS: Record<string, string> = {
    Technology: '#3b82f6', // Blue
    Finance: '#22c55e',    // Green
    Energy: '#eab308',     // Yellow
    Healthcare: '#ef4444', // Red
    Consumer: '#a855f7',   // Purple
    Industrial: '#f97316', // Orange
    Materials: '#14b8a6',  // Teal
    Utilities: '#6366f1',  // Indigo
    RealEstate: '#ec4899', // Pink
    Neutral: '#fbbf24'  // Amber
};

const Graph3D: React.FC<{ onNodeClick?: (node: any) => void }> = ({ onNodeClick }) => {
    const graphRef = useRef<any>(null);
    const containerRef = useRef<HTMLDivElement>(null);
    const [selectedNode, setSelectedNode] = useState<any>(null);
    const [isAutoRotating, setIsAutoRotating] = useState(true);
    const [dimensions, setDimensions] = useState({ width: 800, height: 600 });

    const { data: graphData, isLoading } = useQuery({
        queryKey: ['graphData'],
        queryFn: getGraphData,
    });

    useEffect(() => {
        const updateDimensions = () => {
            if (containerRef.current) {
                setDimensions({
                    width: containerRef.current.clientWidth,
                    height: containerRef.current.clientHeight
                });
            }
        };

        window.addEventListener('resize', updateDimensions);
        updateDimensions();

        return () => window.removeEventListener('resize', updateDimensions);
    }, []);

    // Setup auto-rotation
    useEffect(() => {
        let animationFrameId: number;
        const rotate = () => {
            if (graphRef.current && isAutoRotating) {
                const distance = 400;
                const angle = Date.now() * 0.0003;
                graphRef.current.cameraPosition({
                    x: distance * Math.sin(angle),
                    z: distance * Math.cos(angle)
                });
            }
            animationFrameId = requestAnimationFrame(rotate);
        };
        rotate();
        
        return () => cancelAnimationFrame(animationFrameId);
    }, [isAutoRotating]);

    const handleNodeClick = (node: any) => {
        setSelectedNode(node);
        if (onNodeClick) onNodeClick(node);

        // Focus on node
        const distance = 120;
        const distRatio = 1 + distance / Math.hypot(node.x, node.y, node.z);
        if (graphRef.current) {
            graphRef.current.cameraPosition(
                { x: node.x * distRatio, y: node.y * distRatio, z: node.z * distRatio },
                node,
                3000
            );
        }
        setIsAutoRotating(false); // Stop rotation when interacting
    };

    const getNodeColor = (node: any) => {
        return SECTOR_COLORS[node.sector] || SECTOR_COLORS.Neutral;
    };

    const getNodeOpacity = (node: any) => {
        // Highlight logic could go here
        return 1; // Default opacity
    };

    if (isLoading) {
        return (
            <div className="w-full h-full flex items-center justify-center bg-gray-900 border border-white/10 rounded-xl">
                <div className="flex flex-col items-center">
                    <div className="w-8 h-8 border-2 border-primary border-t-transparent rounded-full animate-spin mb-4" />
                    <span className="text-gray-400 text-sm">Loading Neural Network...</span>
                </div>
            </div>
        );
    }

    return (
        <div ref={containerRef} className="w-full h-full relative group">
            <ForceGraph3D
                ref={graphRef}
                width={dimensions.width}
                height={dimensions.height}
                graphData={graphData || { nodes: [], links: [] }}
                nodeLabel="name"
                nodeColor={getNodeColor}
                nodeRelSize={6}
                
                // Link styling
                linkWidth={0.5}
                linkColor={() => '#ffffff30'}
                opacity={0.6}
                
                // Visuals
                backgroundColor="#00000000" // Transparent
                showNavInfo={false}
                
                // Interaction
                onNodeClick={handleNodeClick}
                onNodeHover={(node: any) => {
                    document.body.style.cursor = node ? 'pointer' : 'default';
                }}
            />
            
            {/* Graph Controls Overlay */}
            <div className="absolute top-4 right-4 flex flex-col gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <button 
                    onClick={() => setIsAutoRotating(!isAutoRotating)}
                    className="p-2 bg-black/60 backdrop-blur-md rounded-lg border border-white/10 hover:bg-white/10 text-white transition-colors"
                    title={isAutoRotating ? "Pause Rotation" : "Start Rotation"}
                >
                    {isAutoRotating ? <Pause className="w-5 h-5" /> : <Play className="w-5 h-5" />}
                </button>
                <div className="h-px bg-white/10 my-1" />
                <button 
                    onClick={() => graphRef.current?.zoomToFit(1000)}
                    className="p-2 bg-black/60 backdrop-blur-md rounded-lg border border-white/10 hover:bg-white/10 text-white transition-colors"
                    title="Fit to Screen"
                >
                    <Maximize2 className="w-5 h-5" />
                </button>
            </div>

            {/* Legend Overlay */}
            <div className="absolute bottom-4 left-4 bg-black/60 backdrop-blur-md p-3 rounded-xl border border-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div className="flex flex-wrap gap-3 max-w-sm">
                    {Object.entries(SECTOR_COLORS).slice(0, 6).map(([sector, color]) => (
                        <div key={sector} className="flex items-center gap-1.5">
                            <div className="w-2 h-2 rounded-full" style={{ backgroundColor: color }} />
                            <span className="text-[10px] text-gray-300 font-medium">{sector}</span>
                        </div>
                    ))}
                </div>
            </div>

            {/* Selected Node Info Overlay */}
            {selectedNode && (
                <div className="absolute top-4 left-4 w-64 bg-black/80 backdrop-blur-xl p-4 rounded-xl border border-white/10 shadow-2xl animate-in slide-in-from-left-4 fade-in duration-300">
                    <button 
                        className="absolute top-2 right-2 text-gray-500 hover:text-white"
                        onClick={(e) => { e.stopPropagation(); setSelectedNode(null); }}
                    >
                        &times;
                    </button>
                    
                    <div className="flex items-center justify-between mb-3 border-b border-white/10 pb-2">
                        <span className="text-xs font-mono text-gray-400">{selectedNode.symbol}</span>
                        <div className={`px-2 py-0.5 rounded text-[10px] font-bold ${selectedNode.prediction > 0 ? 'bg-green-500/20 text-green-400' : 'bg-red-500/20 text-red-400'}`}>
                            {selectedNode.prediction > 0 ? 'BUY' : 'SELL'}
                        </div>
                    </div>
                    
                    <h3 className="font-bold text-lg leading-tight mb-1">{selectedNode.name}</h3>
                    <div className="flex items-center gap-2 mb-4">
                        <span className="text-xs text-primary px-2 py-0.5 rounded-full bg-primary/10 border border-primary/20">
                            {selectedNode.sector}
                        </span>
                    </div>

                    <div className="grid grid-cols-2 gap-2 text-xs">
                        <div className="p-2 rounded bg-white/5">
                            <div className="text-gray-500 mb-1">Confidence</div>
                            <div className="font-mono text-white">{(0.75 + Math.random() * 0.2).toFixed(2)}%</div>
                        </div>
                        <div className="p-2 rounded bg-white/5">
                            <div className="text-gray-500 mb-1">Projected</div>
                            <div className={`font-mono ${selectedNode.prediction > 0 ? 'text-green-400' : 'text-red-400'}`}>
                                {selectedNode.prediction > 0 ? '+' : ''}{(Math.random() * 5).toFixed(2)}%
                            </div>
                        </div>
                    </div>
                </div>
            )}
        </div>
    );
};

export default Graph3D;
